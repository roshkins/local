- model_class = Industry
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @industry.title
%p
  %strong= model_class.human_attribute_name(:supplier_name) + ':'
  %br
  = @industry.supplier_name
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @industry.category_list

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), industries_path, :class => 'btn btn-default'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_industry_path(@industry), :class => 'btn btn-default'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), industry_path(@industry), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
