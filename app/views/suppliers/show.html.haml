.row
  .col-md-12
    .page-header
      %h1
        = @supplier.name
        %small
          = @supplier.industry.title
        = link_to new_supplier_offer_path(@supplier), class: "btn btn-default pull-right" do
          .icon-plus
          New Offer

.row
  .col-md-6
    .panel.panel-default
      .panel-header
        %h2 My Offers
      .panel-content
        - @supplier.offers.each do |o|
          = render partial: "offers/offer_display", locals: {offer: o}
