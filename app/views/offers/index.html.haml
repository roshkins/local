- model_class = Offer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:details)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:supplier_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @offers.each do |offer|
      %tr
        %td= link_to offer.id, offer_path(offer)
        %td= offer.title
        %td= offer.details
        %td= offer.price
        %td= offer.supplier_id
        %td=l offer.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_offer_path(offer), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), offer_path(offer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_offer_path, :class => 'btn btn-primary'
